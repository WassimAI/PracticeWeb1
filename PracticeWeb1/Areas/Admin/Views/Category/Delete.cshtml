@model PracticeWeb1.Areas.Admin.Models.CategoryVM

@using PracticeWeb1.Areas.Admin.Models

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
@if (TempData["AlertMsg"] != null)
{
    <div class="alert alert-danger">
        <p>
            @TempData["AlertMsg"] &nbsp; <a href="@Url.Action("Index","Product", new { @Categories= Model.Title})">Click Here</a> To see Products.
        </p>
    </div>
}
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Display Image
        </dt>

        <dd>
            <img src="~/Images/Uploads/Categories/@Model.Id/Thumbs/@Model.ImageUrl" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
            @Html.Partial("_SmallButtonPartial", new SmallButtonModel
       {
           Action = "Index",
           Controller = "Category",
           Glyph = "list",
           Type = "primary",
           Text = "Back to Categories"
       })
        </div>
    }
</div>
