@model PracticeWeb1.Areas.Admin.Models.CategoryVM

@using PracticeWeb1.Areas.Admin.Models

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Display Image
        </dt>

        <dd>
            <img src="~/Images/Uploads//Categories/@Model.Id/Thumbs/@Model.ImageUrl" />
        </dd>

    </dl>
</div>
<p>
    @Html.Partial("_SmallButtonPartial", new SmallButtonModel
{
    Action = "Edit",
    Controller = "Category",
    Glyph = "pencil",
    Type = "warning",
    Text = "Edit",
    Id = Model.Id
})
    @Html.Partial("_SmallButtonPartial", new SmallButtonModel
{
    Action = "Index",
    Controller = "Category",
    Glyph = "list",
    Type = "primary",
    Text = "Back to Categories"
})
</p>
