    @section Scripts{
        <script>
            $(function () {
                $("#myForm").submit(function (e) {
                    e.preventDefault();
                    var formData = new FormData(this);

                    $.ajax({
                        type: "POST",
                        url: "/Admin/Category/Create",
                        data: formData,
                        success: function (data) {
                            $("body").html(data);
                            //location.href = "/Admin/Category/Create";
                        },
                        contentType: false,
                        processData: false
                    });
                });
            });
        </script>
    }
