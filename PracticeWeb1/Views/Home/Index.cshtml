@model IEnumerable<PracticeWeb1.Entities.Category>

@using PracticeWeb1.Entities.ViewModels

@{
    ViewBag.Title = "Home Page";
}

@{int count = 0; }

<div class="thumbnailArea">
    <div class="row">
        <h3 class="categoriesHeader" style="margin-left:30%;">Shopping Categories</h3>
        <hr />
        <div class="col-md-9">
            @foreach (var item in Model)
            {
                count++;
                    @Html.Partial("_CategoryThumbnailsPartial", item)

                if (count == 4)
                {
                    count = 0;
                    <br />
                }
            }
        </div>
        <div class="col-md-3 hidden-xs categorySideBar">
            Adds &amp; promotions go here
        </div>
    </div>
</div>