@model IEnumerable<PracticeWeb1.Entities.ViewModels.OrderVM>

@{
    ViewBag.Title = "UserOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Orders</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-md-6">
        <table class="table">
            <tr>
                <th>
                    Order ID
                </th>
                <th>
                    Your Username
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        <!--Here comes the logic for ajax call to show details of each order in modal!-->
                        <a href="#" data-id="@item.Id" class="order-details">Details</a>
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col-md-6">
        <div class="order-details-div">

        </div>
    </div>
</div>
